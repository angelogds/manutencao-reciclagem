<% /* views/users_edit.ejs */ %>
<h1 class="page-title">Editar Usuário</h1>

<div class="card">
  <% if (error) { %><div class="erro"><%= error %></div><% } %>

  <form method="POST" action="/users/<%= user.id %>/edit">
    <label>Usuário</label>
    <input value="<%= user.usuario %>" disabled />

    <label>Nome</label>
    <input name="nome" value="<%= user.nome %>" />

    <label>Role</label>
    <select name="role">
      <option value="admin" <%= user.role==='admin' ? 'selected' : '' %>>Admin</option>
      <option value="funcionario" <%= user.role==='funcionario' ? 'selected' : '' %>>Funcionário</option>
      <option value="operador" <%= user.role==='operador' ? 'selected' : '' %>>Operador</option>
    </select>

    <button class="btn btn-green" style="margin-top:12px">Atualizar</button>
  </form>
</div>
