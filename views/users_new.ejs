<% layout('layout', { title: "Novo Usuário", active: "users" }) %>

<h1 class="page-title">Cadastrar Novo Usuário</h1>

<form method="POST" action="/users/new" class="form-card">

    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <label>Usuário (login)</label>
    <input type="text" name="usuario" required placeholder="ex: joao.silva">

    <label>Nome completo</label>
    <input type="text" name="nome" required placeholder="Nome do usuário">

    <label>Senha</label>
    <input type="password" name="senha" required placeholder="Crie uma senha segura">

    <label>Papel do usuário</label>
    <select name="role" required>
        <option value="funcionario">Funcionário</option>
        <option value="operador">Operador</option>
        <option value="admin">Administrador</option>
    </select>

    <button class="btn-save">Criar Usuário</button>

</form>
