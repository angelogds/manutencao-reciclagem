<h1 class="page-title">Relatório de Consumo de Correias</h1>

<form method="GET" class="form-card" style="max-width:300px;">
    <label>Mês</label>
    <input type="month" name="mes" value="<%= mes %>">
    <button class="btn-save">Filtrar</button>
</form>

<table class="tabela" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Equipamento</th>
            <th>Correia</th>
            <th>Total Usado</th>
        </tr>
    </thead>

    <tbody>
        <% if (rel.length === 0) { %>
            <tr><td colspan="3">Nenhum consumo registrado neste mês.</td></tr>
        <% } %>

        <% rel.forEach(r => { %>
            <tr>
                <td><%= r.equipamento %></td>
                <td><%= r.correia %></td>
                <td><strong><%= r.total %></strong></td>
            </tr>
        <% }) %>
    </tbody>
</table>
