<% layout('layout', { title: correia ? "Editar Correia" : "Nova Correia", active: "correias" }) %>

<h1 class="page-title">
    <%= correia ? "Editar Correia" : "Cadastrar Nova Correia" %>
</h1>

<form method="POST" 
      action="<%= correia ? '/correias/' + correia.id + '/editar' : '/correias/novo' %>" 
      class="form-card">

    <label>Nome da Correia</label>
    <input name="nome" required value="<%= correia?.nome || "" %>">

    <label>Modelo</label>
    <input name="modelo" value="<%= correia?.modelo || "" %>">

    <label>Medida</label>
    <input name="medida" value="<%= correia?.medida || "" %>">

    <label>Quantidade em estoque</label>
    <input type="number" name="quantidade" min="0" 
           value="<%= correia?.quantidade || 0 %>">

    <button class="btn-save"><%= correia ? "Salvar Alterações" : "Cadastrar" %></button>
</form>
