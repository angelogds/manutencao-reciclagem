<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title><%= title || "Sistema Manutenção" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<div class="layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="sidebar-header">Sistema</div>

        <nav class="sidebar-menu">
            <a href="/" class="<%= active === 'dashboard' ? 'active' : '' %>">Dashboard</a>
            <a href="/equipamentos" class="<%= active === 'equipamentos' ? 'active' : '' %>">Equipamentos</a>
            <a href="/ordens" class="<%= active === 'ordens' ? 'active' : '' %>">Ordens</a>
            <a href="/ordens/novo" class="<%= active === 'abrir_os' ? 'active' : '' %>">Abrir OS</a>
            <a href="/logout">Sair</a>
        </nav>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main">

        <!-- TOPBAR -->
        <header class="topbar">
            <div class="topbar-left">
                <strong>Sistema Manutenção</strong>
            </div>
            <div class="topbar-right">
                <% if (typeof session !== 'undefined' && session.user) { %>
                    Olá, <%= session.user.nome || 'Usuário' %>
                <% } %>
            </div>
        </header>

        <!-- PAGE CONTENT -->
        <section class="content">
            <%- body %>
        </section>

        <!-- FOOTER -->
        <footer class="footer">
            Rodapé • CDG
        </footer>
    </main>

</div>

</body>
</html>
