<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Campo do Gado' %></title>

  <link rel="stylesheet" href="/css/style.css">
  <script src="https://kit.fontawesome.com/65d9d7e32a.js" crossorigin="anonymous"></script>
</head>
<body>
  <header class="topbar">
    <button id="menuToggle" class="menu-toggle">☰</button>
    <div class="brand">Campo do Gado</div>
    <div class="user"><%= session?.usuario || '' %></div>
  </header>

  <aside class="sidebar" id="sidebar">
    <div class="sidebar-inner">
      <h3 class="sidebar-title">Campo do Gado</h3>
      <ul class="menu-list">
        <li><a href="/" class="<%= active === 'dashboard' ? 'active' : '' %>">Dashboard</a></li>
        <li><a href="/equipamentos" class="<%= active === 'equipamentos' ? 'active' : '' %>">Equipamentos</a></li>
        <li><a href="/correias" class="<%= active === 'correias' ? 'active' : '' %>">Correias / Estoque</a></li>
        <li><a href="/ordens" class="<%= active === 'ordens' ? 'active' : '' %>">Ordens</a></li>
        <% if (session && session.role === 'admin') { %>
          <li><a href="/users" class="<%= active === 'users' ? 'active' : '' %>">Usuários</a></li>
        <% } %>
        <li><a href="/logout">Sair</a></li>
      </ul>
    </div>
  </aside>

  <main class="content">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <%- body %>
  </main>

  <script>
    // toggle sidebar (mobile)
    document.getElementById('menuToggle')?.addEventListener('click', () => {
      document.getElementById('sidebar')?.classList.toggle('open');
    });
  </script>
</body>
</html>
