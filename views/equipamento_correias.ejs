<% layout('layout', { title: "Correias do Equipamento", active: "equipamentos" }) %>

<h1 class="page-title">Correias do Equipamento</h1>

<h2><%= equipamento.nome %></h2>
<p>Código: <strong><%= equipamento.codigo || "-" %></strong></p>

<form method="POST" action="/equipamentos/<%= equipamento.id %>/correias" class="form-card">

    <p>Selecione as correias utilizadas neste equipamento:</p>

    <% correias.forEach(c => { %>
        <div class="form-group" style="margin-bottom:15px; border-bottom:1px solid #ddd; padding-bottom:10px;">
            
            <label>
                <input type="checkbox" name="correia" value="<%= c.id %>"
                       <%= mapLigados[c.id] ? "checked" : "" %>>
                <strong><%= c.nome %></strong> — <%= c.modelo || "" %> <%= c.medida || "" %>
            </label>

            <div style="margin-top:5px;">
                Quantidade usada neste equipamento:
                <input type="number" name="qtd_<%= c.id %>" min="1" 
                       value="<%= mapLigados[c.id] || 1 %>" style="width:80px;">
            </div>
        </div>
    <% }) %>

    <button class="btn-save">Salvar Correias do Equipamento</button>

</form>
